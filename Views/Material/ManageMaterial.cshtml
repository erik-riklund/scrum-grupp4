@model MaterialViewModel

<h2 style="text-align: center;">HANDLE MATERIAL</h2><br />

<h2>Add new model</h2>
<form method="post" asp-action="AddMaterial" enctype="multipart/form-data">
    <div class="form-group row">
        <div class="col-sm-2" style="margin-right: 15px;">
            <label>Material name:</label>
        </div>
        <div class="col-sm-6" style="margin-bottom: 10px;">
            <input asp-for="Name" class="form-control" />
        </div>
    </div>
    <br />
    <div class="form-group row">
        <div class="col-sm-2" style="margin-right: 15px;">
            <label>Description: </label>
        </div>
        <div class="col-sm-6" style="margin-bottom: 10px;">
            <input asp-for="Description" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2" style="margin-right: 15px;">
            <label>Supplier:</label>
        </div>
        <div class="col-sm-6" style="margin-bottom: 10px;">
             <select asp-for="SupplierID" class="form-control">
                @foreach (var item in ViewBag.CurrentSuppliers)
                {
                    <option value="@item.Name">@item.Name</option>
                }
             </select>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2" style="margin-right: 15px;">
            <label>Price:</label>
        </div>
        <div class="col-sm-6" style="margin-bottom: 10px;">
            <input asp-for="Price" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2" style="margin-right: 15px;">
            <label>Unit:</label>
       <div class="col-sm-6" style="margin-bottom: 10px;">
            <div class="form-check">
                <input type="radio" class="form-check-input" name="measurementType" id="meterRadio" value="Meter">
                <label class="form-check-label" for="meterRadio">Meter</label>
            </div>
            <div class="form-check">
                <input type="radio" class="form-check-input" name="measurementType" id="quantityRadio" value="Quantity">
                <label class="form-check-label" for="quantityRadio">Quantity</label>
            </div>
        </div>

    </div>
    <div class="form-group row">
        <div class="col-sm-2" style="margin-right: 15px;">
            <label>Amount:</label>
        </div>
        <div class="col-sm-6" style="margin-bottom: 10px;">
            <input asp-for="CurrentAmount" class="form-control" />
        </div>
    </div>
    <br />
    <button type="submit" class="btn btn-primary" asp-controller="Model" asp-action="AddNewModel">Add new
        model</button>
</form>

