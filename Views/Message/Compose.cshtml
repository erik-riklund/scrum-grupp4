@model MessageComposeViewModel

<div class="container">
  <h2>Compose a new topic</h2>

  <div class="my-5">
    <form method="post">
      <div class="form-group">
        <label for="recipient" class="form-label">Recipient:</label>
        <select asp-for="Recipient" asp-items="@ViewBag.Users" id="recipient" class="form-control"></select>
      </div>

      <div class="form-group mt-3">
        <label for="topic">Title:</label>
        <input type="text" asp-for="Topic" id="topic" class="form-control">
        <div asp-validation-for="Topic" class="text-danger"></div>
      </div>

      <div class="form-group mt-3">
        <label for="message">Message:</label>
        <textarea asp-for="Message" id="message" class="form-control" rows="10"></textarea>
        <div asp-validation-for="Message" class="text-danger"></div>
      </div>

      <button type="submit" class="btn btn-primary btn-block mt-3">Create topic</button>
    </form>
  </div>
</div>