@model MessageTopicViewModel

<div class="container">
  <h3>@Model.Title</h3>

  <div class="mt-3">
    <table class="table table-striped">
      @foreach (var message in Model.Messages)
      {
        <tr>
          <td>
            <div id="@message.ID" style="font-size: 90%">
              Posted @message.Posted.ToString("yyyy-MM-dd HH:mm") by @message.Sender.FirstName
              @message.Sender.LastName
            </div>
            <div class="mt-3">
              <pre
                style="font-family: var(--bs-font-sans-serif); font-size: 1rem; white-space: pre-wrap; word-wrap: break-word;">@message.Content</pre>
            </div>
          </td>
        </tr>
      }
    </table>
  </div>

  <div class="mt-4">
    <form asp-action="Index" asp-controller="Message" method="get">
      <button type="submit" class="btn btn-primary" style="float:left">Return to the inbox</button>
    </form>
    <div style="float:left">&nbsp;</div>
    <form asp-action="Reply" asp-controller="Message" method="get">
      <input type="hidden" name="id" value="@Model.Topic">
      <button type="submit" class="btn btn-primary" style="float:left">Write a reply</button>
    </form>
  </div>
</div>