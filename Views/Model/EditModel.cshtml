@model ModelViewModel

<form method="post" asp-action="SaveEdit">
    <div class="form-group row">
        <div class="col-sm-2" style="margin-right: 15px;">
            <label>Model name: </label>
        </div>
        <div class="col-sm-4" style="margin-bottom: 10px;">
            <input asp-for="ModelName" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2" style="margin-right: 15px;">
            <label>Description: </label>
        </div>
        <div class="col-sm-4" style="margin-bottom: 10px;">
            <input asp-for="Description" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2" style="margin-right: 15px;">
            <label>Picture: </label>
        </div>
        <div class="col-sm-4" style="margin-bottom: 10px;">
            <input asp-for="Picture" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2" style="margin-right: 15px;">
            <label>Product code: </label>
        </div>
        <div class="col-sm-4" style="margin-bottom: 10px;">
            <input asp-for="ProductCode" class="form-control" />
        </div>
    </div>
    <br />
    <input type="hidden" name="ModelId" value="@ViewBag.ModelID" />
    <button type="submit" class="btn btn-primary btn-success" asp-controller="Model" asp-action="SaveEdit">Save
        changes</button>
</form>