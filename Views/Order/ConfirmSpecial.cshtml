@model Order

<h1 style="color: rgb(4, 249, 4);">SPECIAL ORDER</h1>
<div>
    <div>
        <h4>Your order has been sent to Otto's Fashionable Hats.</h4>
        <h3>You will receive updates regarding your order through the message system.</h3>
        <p>Status: @Model.Status</p>
        <p>Order sum: @Model.OrderSum</p>
    </div>
    <div>
        @foreach (var item in @Model.Hats)
        {
            <div>
                @item.Model.ModelName
                @item.Model.Description
                @if (item.Model.ImagePath == null || item.Model.ImagePath == "")
                                    {
                                        <td><img src="~/Images/GenericHat.png" alt="Model Thumbnail" width="45" height="45"></td>
                                    }
                                    else
                                    {
                                        <td><img src="~/Images/@item.Model.ImagePath" alt="Model Thumbnail" width="45" height="45"></td>
                                    }
                @item.Size
                @item.Price
            </div>
        }
    </div>
</div>