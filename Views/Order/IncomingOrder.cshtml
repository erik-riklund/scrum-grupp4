<h1>All Ordedrs</h1>

<table>
    <tr>
        <th>Order ID</th>
        <th>Estimated Delivery Date</th>
        <th>Delivery Date</th>
        <th>Status</th>
        <th>Order Sum</th>
        <th>Action</th>
    </tr>
    @foreach (var order in Model)
    {
        <tr>
            <td>@order.ID</td>
            <td>@order.EstimatedDeliveryDate</td>
            <td>@order.DeliveryDate</td>
            <td>@order.Status</td>
            <td>@order.OrderSum</td>
            <td>
                @if (!order.IsApproved)
                {
                    <form asp-controller="Order" asp-action="ApproveOrder" method="post">
                        <input type="hidden" name="orderId" value="@order.ID" />
                        <button type="submit">Godkänn</button>
                    </form>
                }
                else
                {
                    <span>Godkänd</span>
                }
            </td>
        </tr>
    }
</table>
